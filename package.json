{
  "name": "gitagora",
  "displayName": "GitAgora",
  "description": "Track your coding hours and compete on the leaderboard",
  "version": "0.3.0",
  "publisher": "gitagora",
  "license": "MIT",
  "icon": "images/Logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/NotAProgrammer187/GitAgoraExtension"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:gitagora-sidebar-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitagora-sidebar",
          "title": "GitAgora",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "gitagora-sidebar": [
        {
          "type": "webview",
          "id": "gitagora-sidebar-view",
          "name": "GitAgora",
          "icon": "images/Logo.png"
        }
      ]
    },
    "commands": [
      {
        "command": "gitagora.signIn",
        "title": "GitAgora: Sign In with GitHub"
      },
      {
        "command": "gitagora.signOut",
        "title": "GitAgora: Sign Out"
      },
      {
        "command": "gitagora.showTodayStats",
        "title": "GitAgora: Show Today's Stats"
      },
      {
        "command": "gitagora.openDashboard",
        "title": "GitAgora: Open Dashboard"
      }
    ],
    "configuration": {
      "title": "GitAgora",
      "properties": {
        "gitagora.apiUrl": {
          "type": "string",
          "default": "https://www.gitagora.xyz/",
          "description": "Base URL for the GitAgora API",
          "scope": "application"
        },
        "gitagora.idleTimeout": {
          "type": "number",
          "default": 300,
          "minimum": 60,
          "description": "Seconds of inactivity before considered idle"
        },
        "gitagora.trackProjectNames": {
          "type": "boolean",
          "default": true,
          "description": "Whether to send project/workspace names to GitAgora"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "npx @vscode/vsce package",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  }
}
